{
    "extends": "../tsconfig.base.json",
    "compilerOptions": {
        "rootDir": "./src",
        "outDir": "./dist",
        "baseUrl": ".",
        "typeRoots": ["./node_modules/@types", "./src/types", "../node_modules/@types"],
        "paths": {
            "@/*": ["src/*"],
            "@libs/*": ["../libs/*"]
        },
        "types": ["node"]
    },
    "include": ["src/**/*", "./src/types/global.d.ts"],
    "exclude": ["node_modules", "dist"]
}
