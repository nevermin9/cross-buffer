{
    "extends": "../tsconfig.base.json",
    "compilerOptions": {
        "outDir": "dist",
        "baseUrl": ".",
        "typeRoots": ["./node_modules/@types", "./src/types"],
        "paths": {
            "@/*": ["src/*"],
            "@libs/*": ["../libs/*"]
        },
        "types": ["node"]
    },
    "include": ["src/**/*", "./src/types/global.d.ts"],
    "exclude": ["node_modules", "dist"]
}
