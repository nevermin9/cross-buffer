{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noFallthroughCasesInSwitch": true,
        "lib": [
            "ES2020",
            "DOM",
            "DOM.Iterable"
        ],
    },
    "include": ["src/**/*.js", "src/**/*.jsx", "src/**/*.ts", "src/**/*.vue"]
}
