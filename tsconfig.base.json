{
    "compilerOptions": {
        "rootDir": ".",
        "target": "es2015",
        "module": "esnext",
        "isolatedModules": true,
        "moduleResolution": "bundler",
        "esModuleInterop": true,
        "strict": true,
        "skipLibCheck": true,
        "skipDefaultLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "sourceMap": true,
        "declaration": true,
        "composite": true,
        "incremental": true
    }
}
